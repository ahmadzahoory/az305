{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "n-tier_vnet",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "192.168.0.0/21",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnets": {
      "type": "array",
      "defaultValue": [
        {
            "name": "lbsubnet",
            "addressPrefix": "192.168.0.0/25"
          },
		  {
            "name": "azurebastionsubnet",
            "addressPrefix": "192.168.0.128/25"
          },
		  {
            "name": "vmsubnet",
            "addressPrefix": "192.168.1.0/24"
          },
		  {
            "name": "storagesubnet",
            "addressPrefix": "192.168.2.0/26"
          },
	           {
            "name": "keyvaultsubnet",
            "addressPrefix": "192.168.2.64/26"
          },
	          {
            "name": "dbcachingsubnet",
            "addressPrefix": "192.168.2.128/25"
          },
		  {
            "name": "dbsubnet",
            "addressPrefix": "192.168.3.0/24"
        }
      ]
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "enableServiceEndpoints": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Pass this value as true for enabling service endpoints on the vnet."
      }
    }
  },
   "resources": [
    {
      "apiVersion": "2020-07-01",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        },
        "copy": [
          {
            "name": "subnets",
            "count": "[length(parameters('subnets'))]",
            "input": {
              "name": "[parameters('subnets')[copyIndex('subnets')].name]",
              "properties": {
                "addressPrefix": "[parameters('subnets')[copyIndex('subnets')].addressPrefix]"
              }
            }
          }
        ]
      }
    }
  ]
}
